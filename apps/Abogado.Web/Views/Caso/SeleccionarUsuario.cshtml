@using Abogado.Web.Models
@model CasoUsuarioVM
@{
    ViewData["Title"] = "Login";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Seleccionar usuario</h1>
        <p class="lead">Seleccione un usuario para asignarle el nuevo caso.</p>
    </div>
</div>

@if (Model.Usuarios.Count != 0)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Seleccionar</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Correo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model.Usuarios)
            {
                <tr>
                    <th scope="row">
                        <a class="btn btn-outline-info"
                           asp-area=""
                           asp-controller="Caso"
                           asp-action="CrearCaso"
                           asp-route-idUser="@usuario.Id">
                            Ir
                        </a>
                    </th>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Apellido</td>
                    <td>@usuario.Email</td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="card">
        <div class="card-header">
            comenzamos a ver todos los usuarios
        </div>
        <div class="card-body">
            <h5 class="card-title">Sin Registros aun</h5>
            <p class="card-text">Aun no tiene personas, debes crear una para comenzar</p>
            <a class="btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Index">retornar</a>
        </div>
    </div>
}
