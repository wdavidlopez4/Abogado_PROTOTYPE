@using Abogado.Domain.Entities
@model List<Cita>
@{
    ViewData["Title"] = "Login";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">registro de citas</h1>
        <p class="lead">informacion general</p>
    </div>
</div>

@if (Model.Count != 0)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Fecha inicial</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cita in Model)
            {
                <tr>
                    <td>@cita.Fecha</td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="card">
        <div class="card-header">
            en este momento no tiene casos
        </div>
        <div class="card-body">
            <h5 class="card-title">Sin Registros aun</h5>
            <p class="card-text">Aun no tiene citas, debes crear para comenzar</p>
            <a class="btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Index">retornar</a>
        </div>
    </div>
}
